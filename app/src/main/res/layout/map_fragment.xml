        />

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/map_201"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/map201"
       />



   


